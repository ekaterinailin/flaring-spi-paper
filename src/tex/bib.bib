	journal = {The Astrophysical Journal},
	author = {Stark, Christopher C. and Roberge, Aki and Mandell, Avi and Clampin, Mark and Domagal-Goldman, Shawn D. and McElwain, Michael W. and Stapelfeldt, Karl R.},
	month = aug,

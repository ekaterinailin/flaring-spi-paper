	author = {Ilin, Ekaterina and Poppenhaeger, Katja and Schmidt, Sarah J. and Järvinen, Silva P. and Newton, Elisabeth R. and Alvarado-Gómez, Julián D. and Pineda, J. Sebastian and Davenport, James R. A. and Oshagh, Mahmoudreza and Ilyin, Ilya},
	month = oct,
	year = {2021},
	note = {ADS Bibcode: 2021MNRAS.507.1723I},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, stars: activity, stars: flare, stars: low-mass, stars: magnetic field, stars: rotation},
	pages = {1723--1745},
}


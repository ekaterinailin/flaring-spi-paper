@article{su2022magnetic,
	title = {Magnetic {Activity} and {Physical} {Parameters} of {Exoplanet} {Host} {Stars} {Based} on {LAMOST} {DR7}, {TESS}, {Kepler}, and {K2} {Surveys}},

@article{petigura2018california,
	title = {The {California}-\${\textbackslash}less\$i\${\textbackslash}greater\${Kepler}\${\textbackslash}less\$/i\${\textbackslash}greater\${Survey}. {IV}. {Metal}-rich {Stars} {Host} a {Greater} {Diversity} of {Planets}},

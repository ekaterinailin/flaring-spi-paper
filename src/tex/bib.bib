	note = {ADS Bibcode: 2018ApJ...858...55P},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, TRAPPIST-1, stars: activity, stars: flare, stars: individual: 2MASS J12321827-0951502},
	pages = {55},
}

@article{gizis2017k2,

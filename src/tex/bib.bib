	number = {10},
	urldate = {2022-11-11},
	journal = {Geophysical Research Letters},
	author = {Woods, Thomas N. and Eparvier, Francis G. and Fontenla, Juan and Harder, Jerald and Kopp, Greg and McClintock, William E. and Rottman, Gary and Smiley, Byron and Snow, Martin},

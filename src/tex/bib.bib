	author = {Schneider, Adam C. and Cushing, Michael C. and Kirkpatrick, J. Davy and Gelino, Christopher R. and Mace, Gregory N. and Wright, Edward L. and Eisenhardt, Peter R. and Skrutskie, M. F. and Griffith, Roger L. and Marsh, Kenneth A.},

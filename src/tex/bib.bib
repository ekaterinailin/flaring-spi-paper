	author = {See, Victor and Matt, Sean P. and Folsom, Colin P. and Boro Saikia, Sudeshna and Donati, Jean-Francois and Fares, Rim and Finley, Adam J. and Hébrard, Élodie M. and Jardine, Moira M. and Jeffers, Sandra V. and Lehmann, Lisa T. and Marsden, Stephen C. and Mengel, Matthew W. and Morin, Julien and Petit, Pascal and Vidotto, Aline A. and Waite, Ian A. and {BCool Collaboration}},
	month = may,
	year = {2019},
	note = {ADS Bibcode: 2019ApJ...876..118S},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: low-mass, stars: magnetic field, stars: rotation},
	pages = {118},
}


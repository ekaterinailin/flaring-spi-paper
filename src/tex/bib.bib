	journal = {The Astrophysical Journal},
	author = {Johnstone, C. P. and Güdel, M. and Stökl, A. and Lammer, H. and Tu, L. and Kislyakova, K. G. and Lüftinger, T. and Odert, P. and Erkaev, N. V. and Dorfi, E. A.},
	month = dec,

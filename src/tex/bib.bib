	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, binaries: close, binaries: general, planet-star interactions, planets and satellites: detection, planets and satellites: dynamical evolution and stability, planets and satellites: formation},
	pages = {3593--3611},
}


	journal = {The Astrophysical Journal},
	author = {Kowalski, Adam F. and Wisniewski, John P. and Hawley, Suzanne L. and Osten, Rachel A. and Brown, Alexander and Fariña, Cecilia and Valenti, Jeff A. and Brown, Stephen and Xilouris, Manolis and Schmidt, Sarah J. and Johns-Krull, Christopher},
	month = feb,

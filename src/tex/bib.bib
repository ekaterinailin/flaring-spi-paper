@article{malo2014banyan,
	title = {{BANYAN}. {IV}. {Fundamental} {Parameters} of {Low}-mass {Star} {Candidates} in {Nearby} {Young} {Stellar} {Kinematic} {Groups}—{Isochronal} {Age} {Determination} using {Magnetic} {Evolutionary} {Models}},
	volume = {792},

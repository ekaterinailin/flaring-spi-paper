	note = {ADS Bibcode: 2022MNRAS.514.2259S},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, Astrophysics - Solar and Stellar Astrophysics, planets and satellites: atmospheres, planets and satellites: detection, stars: activity, stars: rotation, techniques: photometric, techniques: spectroscopic},

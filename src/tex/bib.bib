	author = {Cristofari, P. I. and Donati, J. -F. and Masseron, T. and Fouqué, P. and Moutou, C. and Carmona, A. and Artigau, E. and Martioli, E. and Hébrard, G. and Gaidos, E. and Delfosse, X. and {SLS consortium}},
	month = nov,
	year = {2022},
	note = {ADS Bibcode: 2022MNRAS.516.3802C},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, infrared: stars, stars: fundamental parameters, stars: low-mass, techniques: spectroscopic},
	pages = {3802--3820},
}


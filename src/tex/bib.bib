	year = {2010},
	note = {ADS Bibcode: 2010AsBio..10..751S},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Flare, Habitable zone, M dwarf, Planetary atmospheres},
	pages = {751--771},
}


	keywords = {1476, 1485, 1496, 1501, 1963, 1982, 767, Astrophysics - Solar and Stellar Astrophysics, Hydrodynamical simulations, Hydrodynamics, Solar coronal loops, Solar flare spectra, Solar flares, Solar physics, Solar spectral irradiance},
	pages = {106},
}

@article{stelzer2003weakline,

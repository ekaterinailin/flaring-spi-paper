@article{see2019estimating,
	title = {Estimating {Magnetic} {Filling} {Factors} from {Zeeman}-{Doppler} {Magnetograms}},
	volume = {876},
	issn = {0004-637X},
	url = {https://ui.adsabs.harvard.edu/abs/2019ApJ...876..118S},
	doi = {10.3847/1538-4357/ab1096},
	abstract = {Low-mass stars are known to have magnetic fields that are believed to be of dynamo origin. Two complementary techniques are principally used to characterize them. Zeeman-Doppler imaging (ZDI) can determine the geometry of the large-scale magnetic field while Zeeman broadening can assess the total unsigned flux including that associated with small-scale structures such as spots. In this work, we study a sample of stars that have been previously mapped with ZDI. We show that the average unsigned magnetic flux follows an activity-rotation relation separating into saturated and unsaturated regimes. We also compare the average photospheric magnetic flux recovered by ZDI, {\textless} \{B\}V{\textgreater} , with that recovered by Zeeman broadening studies, {\textless} \{B\}I{\textgreater} . In line with previous studies, {\textless} \{B\}V{\textgreater} ranges from a few \% to ∼20\% of {\textless} \{B\}I{\textgreater} . We show that a power-law relationship between {\textless} \{B\}V{\textgreater} and {\textless} \{B\}I{\textgreater} exists and that ZDI recovers a larger fraction of the magnetic flux in more active stars. Using this relation, we improve on previous attempts to estimate filling factors, i.e., the fraction of the stellar surface covered with magnetic field, for stars mapped only with ZDI. Our estimated filling factors follow the well-known activity-rotation relation, which is in agreement with filling factors obtained directly from Zeeman broadening studies. We discuss the possible implications of these results for flux tube expansion above the stellar surface and stellar wind models.},

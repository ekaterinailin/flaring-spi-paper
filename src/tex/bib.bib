@article{kitchatinov2020flux,
	title = {Flux {Tubes} {Forming} {Instability} {Near} the {Base} of the {Rotating} {Convection} {Zone}: {A} {Possible} {Explanation} for the {Low} {Latitudes} of {Sunspots}},

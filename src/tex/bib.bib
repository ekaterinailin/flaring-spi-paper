	note = {ADS Bibcode: 2017MNRAS.472.1618G},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, stars: activity, stars: rotation, starspots., techniques: photometric},
	pages = {1618--1627},
}

@article{basri2022new,
	title = {A {New} {Method} for {Estimating} {Starspot} {Lifetimes} {Based} on {Autocorrelation} {Functions}},

@article{hedges2019four,
	title = {Four {Small} {Planets} {Buried} in {K2} {Systems}: {What} {Can} {We} {Learn} for {TESS}?},
	volume = {880},
	issn = {0004-637X},
	shorttitle = {Four {Small} {Planets} {Buried} in {K2} {Systems}},

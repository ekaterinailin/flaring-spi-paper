	note = {ADS Bibcode: 2018AJ....156...99L},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, catalogs, planets and satellites: detection, techniques: photometric},

	note = {ADS Bibcode: 2019MNRAS.482.5000S},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, catalogues, infrared: stars, stars: individual: J1407, stars: individual: KIC 846282, stars: individual: VVV-WIT-07, surveys},
	pages = {5000--5006},

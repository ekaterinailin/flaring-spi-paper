	author = {Mansfield, Megan and Bean, Jacob L. and Oklopčić, Antonija and Kreidberg, Laura and Désert, Jean-Michel and Kempton, Eliza M. -R. and Line, Michael R. and Fortney, Jonathan J. and Henry, Gregory W. and Mallonn, Matthias and Stevenson, Kevin B. and Dragomir, Diana and Allart, Romain and Bourrier, Vincent},

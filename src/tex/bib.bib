	month = nov,
	year = {2015},
	note = {ADS Bibcode: 2015MNRAS.453.4301S},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: activity, stars: magnetic field, stars: rotation, techniques: polarimetric},

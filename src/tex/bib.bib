	keywords = {Astrophysics - Solar and Stellar Astrophysics, binaries: eclipsing, open clusters and associations: individual: Ruprecht 147, stars: evolution, stars: fundamental parameters, stars: individual: EPIC 219394517, techniques: photometric},

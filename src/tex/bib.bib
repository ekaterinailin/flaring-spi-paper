	journal = {Astronomy and Astrophysics},
	author = {Işik, E. and Schüssler, M. and Solanki, S. K.},
	month = mar,
	year = {2007},
	note = {Number: 3
Publisher: EDP Sciences},
	pages = {1049--1057},
}

@article{griessmeier2007predicting,

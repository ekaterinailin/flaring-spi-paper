	note = {ADS Bibcode: 2022MNRAS.512..979D},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: activity, stars: flare, stars: low-mass, stars: magnetic field, stars: rotation},
	pages = {979--988},
}


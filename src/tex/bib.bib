	note = {ADS Bibcode: 2018MNRAS.474.4956F},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: formation, stars: imaging, stars: magnetic fields, stars: rotation, stars: solar-type, techniques: polarimetric},
	pages = {4956--4987},
}


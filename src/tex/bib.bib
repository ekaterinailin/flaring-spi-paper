	keywords = {CONVECTION, Convection, SUN: INTERIOR, SUN: OSCILLATIONS, SUN: ROTATION, Sun: Interior, Sun: Oscillations, Sun: Rotation},
	pages = {390--417},
}

@article{spruit2002dynamo,
	title = {Dynamo action by differential rotation in a stably stratified stellar interior},
	volume = {381},
	issn = {0004-6361},
	url = {https://ui.adsabs.harvard.edu/abs/2002A&A...381..923S/abstract},

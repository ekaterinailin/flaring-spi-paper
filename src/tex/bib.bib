	month = oct,
	year = {2021},
	note = {Publication Title: arXiv e-prints
ADS Bibcode: 2021arXiv211008117B
Type: article},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, Physics - Fluid Dynamics},

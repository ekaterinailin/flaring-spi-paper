	keywords = {Coronagraphs, Kinetic Energy, Proton Flux Density, Solar Activity, Solar Corona, Solar Physics, Spectral Energy Distribution, Stellar Mass Ejection, Sunspots, Temporal Distribution},
	pages = {8173--8192},
}

@article{tsurutani2004properties,

	journal = {The Astrophysical Journal},
	author = {Yang, Huiqin and Liu, Jifeng and Gao, Qing and Fang, Xuan and Guo, Jincheng and Zhang, Yong and Hou, Yonghui and Wang, Yuefei and Cao, Zihuang},
	month = nov,

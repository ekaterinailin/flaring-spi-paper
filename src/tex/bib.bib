	note = {ADS Bibcode: 2018MNRAS.477.3197R},
	keywords = {Astrophysics - Astrophysics of Galaxies, astrometry, open clusters and associations: individual: Hyades, stars: distances, stars: fundamental parameters},
	pages = {3197--3216},
}

@article{queiroz2018starhorse,

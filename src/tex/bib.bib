	author = {Van Doorsselaere, Tom and Kupriyanova, Elena G. and Yuan, Ding},
	month = nov,
	year = {2016},
	note = {ADS Bibcode: 2016SoPh..291.3143V},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, Coronal seismology, Flares, Oscillations, dynamics, solar, stellar, waves},
	pages = {3143--3164},
}

@article{chen2006transitionregion,

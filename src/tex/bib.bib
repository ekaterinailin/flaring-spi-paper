	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: atmospheres, stars: imaging, stars: low-mass, starspots, techniques: imaging spectroscopy, techniques: spectroscopic},
	pages = {811--823},
}

@article{barnes2015starspot,
	title = {Starspot {Distributions} on {Fully} {Convective} {M} {Dwarfs}: {Implications} for {Radial} {Velocity} {Planet} {Searches}},
	volume = {812},
	issn = {0004-637X},
	shorttitle = {Starspot {Distributions} on {Fully} {Convective} {M} {Dwarfs}},

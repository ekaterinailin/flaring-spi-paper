	note = {ADS Bibcode: 2022AJ....163...35B},
	keywords = {2107, 487, 498, 753, Astrophysics - Earth and Planetary Astrophysics, Exoplanet atmospheres, Exoplanets, Hot Jupiters, Theoretical models},
	pages = {35},
}


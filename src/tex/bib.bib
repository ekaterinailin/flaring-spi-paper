	journal = {The Astronomical Journal},
	author = {Louden, Emma M. and Winn, Joshua N. and Petigura, Erik A. and Isaacson, Howard and Howard, Andrew W. and Masuda, Kento and Albrecht, Simon and Kosiarek, Molly R.},

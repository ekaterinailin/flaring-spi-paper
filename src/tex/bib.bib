	author = {Rougier, Jonathan and Sparks, R. Stephen J. and Cashman, Katharine V. and Brown, Sarah K.},
	month = jan,
	year = {2018},
	pages = {621},
}

@article{rugheimer2018spectra,
	title = {Spectra of {Earth}-like {Planets} through {Geological} {Evolution} around {FGKM} {Stars}},

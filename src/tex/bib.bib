	journal = {arXiv:2203.02047 [astro-ph, physics:hep-ph]},
	author = {Getman, Konstantin V. and Feigelson, Eric D. and Garmire, Gordon P. and Broos, Patrick S. and Kuhn, Michael A. and Preibisch, Thomas and Airapetian, Vladimir S.},
	month = mar,

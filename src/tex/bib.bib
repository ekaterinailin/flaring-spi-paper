	note = {ADS Bibcode: 2020ApJ...902L...4F},
	keywords = {1476, 1492, 1524, 1534, 1599, 1621, 1629, Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Solar evolution, Solar physics, Solar rotation, Solar wind, Stellar evolution, Stellar physics, Stellar rotation},

	keywords = {Astronomical Models, Coronal Loops, Energy Dissipation, HYDROMAGNETICS, Magnetic Flux, Magnetohydrodynamic Stability, PLASMAS, Photosphere, Plasma Equilibrium, SUN: CORONA, Solar Corona, Solar Physics, Toroidal Plasmas},

	note = {ADS Bibcode: 2006ApJ...644..484A},
	keywords = {Astrophysics, Brown Dwarfs, Hydrodynamics, Radiative Transfer, Stars: Atmospheres, Stars: Chromospheres, Stars: Flare, Stars: Low-Mass},
	pages = {484--496},
}


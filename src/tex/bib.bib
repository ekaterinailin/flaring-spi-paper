	note = {ADS Bibcode: 2012MNRAS.419...29J},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, X-rays: bursts, stars: coronae, stars: flare, stars: rotation, surveys},
	pages = {29--38},
}


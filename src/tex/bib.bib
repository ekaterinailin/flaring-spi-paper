	note = {arXiv: 2110.02190},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Physics - Space Physics},
}

@article{mulders2021why,
	title = {Why do {M} dwarfs have more transiting planets?},
	volume = {920},
	issn = {2041-8205, 2041-8213},
	url = {http://arxiv.org/abs/2110.02971},
	doi = {10.3847/2041-8213/ac2947},
	abstract = {We propose a planet formation scenario to explain the elevated occurrence rates of transiting planets around M dwarfs compared to sun-like stars discovered by Kepler. We use a pebble drift and accretion model to simulate the growth of planet cores inside and outside of the snow line. A smaller pebble size interior to the snow line delays the growth of super-Earths, allowing giant planet cores in the outer disk to form first. When those giant planets reach pebble isolation mass they cut off the flow of pebbles to the inner disk and prevent the formation of close-in super-Earths. We apply this model to stars with masses between 0.1 and 2 solar mass and for a range of initial disk masses. We find that the masses of hot super-Earths and of cold giant planets are anti-correlated. The fraction of our simulations that form hot super-Earths is higher around lower-mass stars and matches the exoplanet occurrence rates from Kepler. The fraction of simulations forming cold giant planets is consistent with the stellar mass dependence from radial velocity surveys. A key testable prediction of the pebble accretion hypothesis is that the occurrence rates of super-Earths should decrease again for M dwarfs near the sub-stellar boundary like Trappist-1.},
	number = {1},
	urldate = {2021-12-27},
	journal = {The Astrophysical Journal Letters},
	author = {Mulders, Gijs D. and Drążkowska, Joanna and van der Marel, Nienke and Ciesla, Fred J. and Pascucci, Ilaria},
	month = oct,
	year = {2021},
	note = {arXiv: 2110.02971},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, Astrophysics - Solar and Stellar Astrophysics},
	pages = {L1},
}

@article{callingham2021population,

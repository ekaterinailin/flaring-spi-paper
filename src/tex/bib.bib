	note = {ADS Bibcode: 2022MNRAS.513.4380I},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, X-rays: stars, binaries: general, planet-star interactions, planets and satellites: general, stars: activity, stars: evolution},
	pages = {4380--4404},
}

@article{ilin2021localizing,

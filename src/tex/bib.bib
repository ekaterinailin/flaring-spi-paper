	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Strugarek, A. and Fares, R. and Bourrier, V. and Brun, A. S. and Réville, V. and Amari, T. and Helling, Ch and Jardine, M. and Llama, J. and Moutou, C. and Vidotto, A. A. and Wheatley, P. J. and Zarka, P.},

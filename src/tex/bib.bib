	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Instrumentation and Methods for Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Galaxy: stellar content, stars: distances, stars: fundamental parameters, stars: statistics},

	journal = {The Astrophysical Journal},
	author = {Poppenhaeger, K. and Schmitt, J. H. M. M.},
	month = jul,
	year = {2011},
	note = {ADS Bibcode: 2011ApJ...735...59P},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, X-rays: stars, planet-star interactions, stars: activity, stars: coronae},
	pages = {59},
}

@article{poppenhaeger2015stellar,

@article{lorenzo-oliveira2018solar,
	title = {The {Solar} {Twin} {Planet} {Search}. {The} age-chromospheric activity relation},
	volume = {619},
	issn = {0004-6361},
	url = {https://ui.adsabs.harvard.edu/abs/2018A&A...619A..73L/abstract},
	doi = {10.1051/0004-6361/201629294},
	abstract = {Context. It is well known that the magnetic activity of solar-type stars decreases with age, but it is widely debated in the literature whether there is a smooth decline or if there is an early sharp drop until 1-2 Gyr that is followed by a relatively inactive constant phase. {\textless}BR /{\textgreater} Aims: We revisited the activity-age relation using time-series observations of a large sample of solar twins whose precise isochronal ages and other important physical parameters have been determined. {\textless}BR /{\textgreater} Methods: We measured the Ca II H and K activity indices using ≈9000 HARPS spectra of 82 solar twins. In addition, the average solar activity was calculated through asteroids and Moon reflection spectra using the same instrumentation. Thus, we transformed our activity indices into the S Mount Wilson scale (S{\textless}SUB{\textgreater}MW{\textless}/SUB{\textgreater}), recalibrated the Mount Wilson absolute flux and photospheric correction equations as a function of T{\textless}SUB{\textgreater}eff{\textless}/SUB{\textgreater}, and then computed an improved bolometric flux normalized activity index log R'{\textless}SUB{\textgreater}HK{\textless}/SUB{\textgreater} (T{\textless}SUB{\textgreater}eff{\textless}/SUB{\textgreater}) for the entire sample. {\textless}BR /{\textgreater} Results: New relations between activity and the age of solar twins were derived by assessing the chromospheric age-dating limits using log R'{\textless}SUB{\textgreater}HK{\textless}/SUB{\textgreater} (T{\textless}SUB{\textgreater}eff{\textless}/SUB{\textgreater}). We measured an average solar activity of S{\textless}SUB{\textgreater}MW{\textless}/SUB{\textgreater} = 0.1712 ± 0.0017 during solar magnetic cycles 23-24 covered by HARPS observations, and we also inferred an average of S{\textless}SUB{\textgreater}MW{\textless}/SUB{\textgreater} = 0.1694 ± 0.0025 for cycles 10-24, anchored on a sunspot number correlation of S index versus. We also found a simple relation between the average and the dispersion of the activity levels of solar twins. This enabled us to predict the stellar variability effects on the age-activity diagram, and consequently, to estimate the chromospheric age uncertainties that are due to the same phenomena. The age-activity relation is still statistically significant up to ages around 6-7 Gyr, in agreement with previous works using open clusters and field stars with precise ages. {\textless}BR /{\textgreater} Conclusions: Our research confirms that Ca II H \&amp; K lines remain a useful chromospheric evolution tracer until stars reach ages of at least 6-7 Gyr. We found evidence that for the most homogenous set of old stars, the chromospheric activity indices seem to continue to decrease after the solar age toward the end of the main sequence. Our results indicate that a significant part of the scatter observed in the age-activity relation of solar twins can be attributed to stellar cycle modulations effects. The Sun seems to have a normal activity level and variability for its age. {\textless}P /{\textgreater}Based on observations collected at the European Organisation for Astronomical Research in the Southern Hemisphere under ESO programs 188.C-0265, 183.D-0729, 292.C-5004, 097.C-0571, 092.C-0721, 093.C-0409, 072.C-0488, 183.C-0972, 091.C-0936, 192.C-0852, 196.C-1006, 076.C-0155, 096.C-0499, 185.D-0056, 192.C-0224, 075.C-0332, 090.C-0421, 091.C-0034, 077.C-0364, 089.C-0415, 60.A-9036, 092.C-0832, 295.C-5035, 295.C-5031, 60.A-9700, 289.D-5015, 096.C-0210, 086.C-0284, 088.C-0323, 0100.D-0444, and 099.C-0491.Tables 1 and 2 are only available at the CDS via anonymous ftp to {\textless}A href="http://cdsarc.u-strasbg.fr"{\textgreater}http://cdsarc.u-strasbg.fr{\textless}/A{\textgreater} (ftp://130.79.128.5) or via {\textless}A href="http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/619/A73"{\textgreater}http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/619/A73{\textless}/A{\textgreater}},
	language = {en},
	urldate = {2022-03-22},
	journal = {Astronomy and Astrophysics},
	author = {Lorenzo-Oliveira, Diego and Freitas, Fabrício C. and Meléndez, Jorge and Bedell, Megan and Ramírez, Iván and Bean, Jacob L. and Asplund, Martin and Spina, Lorenzo and Dreizler, Stefan and Alves-Brito, Alan and Casagrande, Luca},
	month = nov,

@article{astudillo-defru2017magnetic,
	title = {Magnetic activity in the {HARPS} {M} dwarf sample - {The} rotation-activity relationship for very low-mass stars through {R}'{HK}},
	volume = {600},
	copyright = {© ESO, 2017},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2017/04/aa27078-15/aa27078-15.html},
	doi = {10.1051/0004-6361/201527078},
	abstract = {{\textless}i{\textgreater}Context. {\textless}i/{\textgreater}Atmospheric magnetic fields in stars with convective envelopes heat stellar chromospheres, and thus increase the observed flux in the Ca ii H and K doublet. Starting with the historical Mount Wilson monitoring program, these two spectral lines have been widely used to trace stellar magnetic activity, and as a proxy for rotation period ({\textless}i{\textgreater}P{\textless}i/{\textgreater}{\textless}sub{\textgreater}rot{\textless}sub/{\textgreater}) and consequently for stellar age. Monitoring stellar activity has also become essential in filtering out false-positives due to magnetic activity in extra-solar planet surveys. The Ca ii emission is traditionally quantified through the {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater}-index, which compares the chromospheric flux in the doublet to the overall bolometric flux of the star. Much work has been done to characterize this index for FGK-dwarfs, but M dwarfs – the most numerous stars of the Galaxy – were left out of these analyses and no calibration of their Ca ii H and K emission to an {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} exists to date.{\textless}i{\textgreater}Aims. {\textless}i/{\textgreater}We set out to characterize the magnetic activity of the low- and very-low-mass stars by providing a calibration of the {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater}-index that extends to the realm of M dwarfs, and by evaluating the relationship between {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} and the rotation period.{\textless}i{\textgreater}Methods. {\textless}i/{\textgreater}We calibrated the bolometric and photospheric factors for M dwarfs to properly transform the {\textless}i{\textgreater}S{\textless}i/{\textgreater}-index (which compares the flux in the Ca ii H and K lines to a close spectral continuum) into the {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater}. We monitored magnetic activity through the Ca ii H and K emission lines in the HARPS M dwarf sample.{\textless}i{\textgreater}Results. {\textless}i/{\textgreater}The {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} index, like the fractional X-ray luminosity {\textless}i{\textgreater}L{\textless}i/{\textgreater}{\textless}sub{\textgreater}X{\textless}sub/{\textgreater}/{\textless}i{\textgreater}L{\textless}i/{\textgreater}{\textless}sub{\textgreater}bol{\textless}sub/{\textgreater}, shows a saturated correlation with rotation, with saturation setting in around a ten days rotation period. Above that period, slower rotators show weaker Ca ii activity, as expected. Under that period, the {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} index saturates to approximately 10{\textless}sup{\textgreater}-4{\textless}sup/{\textgreater}. Stellar mass modulates the Ca ii activity, with {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} showing a constant basal activity above 0.6 {\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}⊙{\textless}sub/{\textgreater} and then decreasing with mass between 0.6 {\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}⊙{\textless}sub/{\textgreater} and the fully-convective limit of 0.35 {\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}⊙{\textless}sub/{\textgreater}. Short-term variability of the activity correlates with its mean level and stars with higher {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} indexes show larger {\textless}i{\textgreater}R'{\textless}i/{\textgreater}{\textless}sub{\textgreater}HK{\textless}sub/{\textgreater} variability, as previously observed for earlier spectral types.},
	language = {en},
	urldate = {2022-11-18},
	journal = {Astronomy \& Astrophysics},
	author = {Astudillo-Defru, N. and Delfosse, X. and Bonfils, X. and Forveille, T. and Lovis, C. and Rameau, J.},
	month = apr,
	year = {2017},
	note = {Publisher: EDP Sciences},
	pages = {A13},
}

@article{trifonov2020public,
	title = {Public {HARPS} radial velocity database corrected for systematic errors},
	volume = {636},
	copyright = {© T. Trifonov et al. 2020},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2020/04/aa36686-19/aa36686-19.html},
	doi = {10.1051/0004-6361/201936686},
	abstract = {{\textless}i{\textgreater}Context.{\textless}i/{\textgreater} The High Accuracy Radial velocity Planet Searcher (HARPS) spectrograph has been mounted since 2003 at the ESO 3.6 m telescope in La Silla and provides state-of-the-art stellar radial velocity (RV) measurements with a precision down to ∼1 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater}. The spectra are extracted with a dedicated data-reduction software (DRS), and the RVs are computed by cross-correlating with a numerical mask.{\textless}i{\textgreater}Aims.{\textless}i/{\textgreater} This study has three main aims: (i) Create easy access to the public HARPS RV data set. (ii) Apply the new public SpEctrum Radial Velocity AnaLyser (SERVAL) pipeline to the spectra, and produce a more precise RV data set. (iii) Determine whether the precision of the RVs can be further improved by correcting for small nightly systematic effects.{\textless}i{\textgreater}Methods.{\textless}i/{\textgreater} For each star observed with HARPS, we downloaded the publicly available spectra from the ESO archive and recomputed the RVs with SERVAL. This was based on fitting each observed spectrum with a high signal-to-noise ratio template created by coadding all the available spectra of that star. We then computed nightly zero-points (NZPs) by averaging the RVs of quiet stars.{\textless}i{\textgreater}Results.{\textless}i/{\textgreater} By analyzing the RVs of the most RV-quiet stars, whose RV scatter is {\textless} 5 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater}, we find that SERVAL RVs are on average more precise than DRS RVs by a few percent. By investigating the NZP time series, we find three significant systematic effects whose magnitude is independent of the software that is used to derive the RV: (i) stochastic variations with a magnitude of ∼1 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater}; (ii) long-term variations, with a magnitude of ∼1 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater} and a typical timescale of a few weeks; and (iii) 20–30 NZPs that significantly deviate by a few m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater}. In addition, we find small (≲1 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater}) but significant intra-night drifts in DRS RVs before the 2015 intervention, and in SERVAL RVs after it. We confirm that the fibre exchange in 2015 caused a discontinuous RV jump that strongly depends on the spectral type of the observed star: from ∼14 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater} for late F-type stars to ∼ − 3 m s{\textless}sup{\textgreater}−1{\textless}sup/{\textgreater} for M dwarfs. The combined effect of extracting the RVs with SERVAL and correcting them for the systematics we find is an improved average RV precision: an improvement of ∼5\% for spectra taken before the 2015 intervention, and an improvement of ∼15\% for spectra taken after it. To demonstrate the quality of the new RV data set, we present an updated orbital solution of the GJ 253 two-planet system.{\textless}i{\textgreater}Conclusions.{\textless}i/{\textgreater} Our NZP-corrected SERVAL RVs can be retrieved from a user-friendly public database. It provides more than 212 000 RVs for about 3000 stars along with much auxiliary information, such as the NZP corrections, various activity indices, and DRS-CCF products.},
	language = {en},
	urldate = {2022-11-18},
	journal = {Astronomy \& Astrophysics},
	author = {Trifonov, Trifon and Tal-Or, Lev and Zechmeister, Mathias and Kaminski, Adrian and Zucker, Shay and Mazeh, Tsevi},
	month = apr,
	year = {2020},
	note = {Publisher: EDP Sciences},
	pages = {A74},
}


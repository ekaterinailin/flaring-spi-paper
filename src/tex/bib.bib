	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, magnetic fields, planets and satellites: formation, stars: imaging, stars: individual: TAP 26, stars: rotation, techniques: polarimetric},

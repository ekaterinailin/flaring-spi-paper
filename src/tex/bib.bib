	keywords = {1496, 1503, 1518, 1983, Astrophysics - High Energy Astrophysical Phenomena, Astrophysics - Solar and Stellar Astrophysics, Physics - Space Physics, Solar flares, Solar magnetic fields, Solar photosphere, Solar white-light flares},

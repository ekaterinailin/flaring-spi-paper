	note = {ADS Bibcode: 2022MNRAS.516..540R},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, radio continuum: stars, stars: activity, stars: flare, stars: low-mass},
	pages = {540--549},
}


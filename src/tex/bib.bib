}

@article{barnes2010angular,
	title = {Angular {Momentum} {Loss} from {Cool} {Stars}: {An} {Empirical} {Expression} and {Connection} to {Stellar} {Activity}},
	volume = {721},
	issn = {0004-637X},
	shorttitle = {Angular {Momentum} {Loss} from {Cool} {Stars}},

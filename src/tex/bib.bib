	keywords = {1572, 1603, 1610, 1629, 1800, 2177, Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Star-planet interactions, Starspots, Stellar flares, Stellar magnetic fields, Stellar rotation, Wide-field telescopes},

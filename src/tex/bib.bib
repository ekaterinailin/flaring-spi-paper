	month = jan,
	year = {2015},
	note = {ADS Bibcode: 2015ApJ...799...37L},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, brown dwarfs, stars: atmospheres},
	pages = {37},
}

@article{chang2015photometric,
	title = {Photometric {Study} on {Stellar} {Magnetic} {Activity}. {I}. {Flare} {Variability} of {Red} {Dwarf} {Stars} in the {Open} {Cluster} {M37}},

	abstract = {Photometric space missions like Kepler and TESS continuously discover new exoplanets and advance the search for a second habitable world. The light curves recorded by these telescopes also reveal signs of magnetic activity, such as star spot modulation and flares, which can influence habitability. Searching for these characteristics, we analyzed TESS light curves of 112 M dwarfs selected according to the criterion that TESS can spot planet transits over their entire habitable zone (HZ). We detected 2532 flare events, occurring on 35 stars, thus the flare incidence rate is \${\textbackslash}approx32{\textbackslash}\%\$. For only \${\textbackslash}approx11{\textbackslash}\%\$ of our stars, we found rotation periods. We calculated bolometric flare energies and luminosities, flare energy frequency distributions (FFDs) and the bolometric flux reaching the HZ at the peak of the flare. We estimated the effects of flaring on the atmosphere of an Earth-like planet in the HZ in the view of both ozone depletion and the enabling of chemical reactions necessary to build ribonucleic acid (RNA). None of our targets exhibits highly energetic flares at a frequency large enough to trigger ozone depletion or RNA formation. The flux reaching the inner HZ edge during flare events goes up to \${\textbackslash}approx 4.5\$ times the quiescent solar flux at 1{\textbackslash},au.},
	urldate = {2022-06-03},
	journal = {Astronomische Nachrichten},
	author = {Bogner, M. and Stelzer, B. and Raetz, Stefanie},
	month = may,
	year = {2022},
	note = {ADS Bibcode: 2022AN....34310079B},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics},
	pages = {e10079},
}

@article{kipping2022exomoon,
	title = {An exomoon survey of 70 cool giant exoplanets and the new candidate {Kepler}-1708 b-i},

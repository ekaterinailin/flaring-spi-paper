@article{cohen2011dynamics,
	title = {The {Dynamics} of {Stellar} {Coronae} {Harboring} {Hot} {Jupiters}. {I}. {A} {Time}-dependent {Magnetohydrodynamic} {Simulation} of the {Interplanetary} {Environment} in the {HD} 189733 {Planetary} {System}},

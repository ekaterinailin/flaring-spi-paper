	author = {Namekata, Kosuke and Maehara, Hiroyuki and Notsu, Yuta and Toriumi, Shin and Hayakawa, Hisashi and Ikuta, Kai and Notsu, Shota and Honda, Satoshi and Nogami, Daisaku and Shibata, Kazunari},

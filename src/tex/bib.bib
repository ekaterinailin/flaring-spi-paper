@article{namekata2022sunasastar,
	title = {Sun-as-a-star {Analysis} of {Hα} {Spectra} of a {Solar} {Flare} {Observed} by {SMART}/{SDDI}: {Time} {Evolution} of {Red} {Asymmetry} and {Line} {Broadening}},

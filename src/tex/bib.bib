@article{namekata2019lifetimes,
	title = {Lifetimes and {Emergence}/{Decay} {Rates} of {Star} {Spots} on {Solar}-type {Stars} {Estimated} by {Kepler} {Data} in {Comparison} with {Those} of {Sunspots}},

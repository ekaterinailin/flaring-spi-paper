@article{huang2020mdwarf,
	title = {M-dwarf {Eclipsing} {Binaries} with {Flare} {Activity}},
	volume = {892},
	issn = {0004-637X},
	url = {https://ui.adsabs.harvard.edu/abs/2020ApJ...892...58H},

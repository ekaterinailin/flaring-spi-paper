}

@article{huenemoerder2013stellar,
	title = {Stellar {Coronae}, {Solar} {Flares}: {A} {Detailed} {Comparison} of σ {GEM}, {HR} 1099, and the {Sun} in {High}-resolution {X}-{Rays}},

	urldate = {2022-04-29},
	journal = {The Astronomical Journal},
	author = {Salama, Maissa and Ziegler, Carl and Baranec, Christoph and Liu, Michael C. and Law, Nicholas M. and Riddle, Reed and Henry, Todd J. and Winters, Jennifer G. and Jao, Wei-Chun and Ou, James and Ruiz, Arcelia Hermosillo},
	month = may,

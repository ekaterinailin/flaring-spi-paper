@article{kesseli2018magnetic,
	title = {Magnetic {Inflation} and {Stellar} {Mass}. {II}. {On} the {Radii} of {Single}, {Rapidly} {Rotating}, {Fully} {Convective} {M}-{Dwarf} {Stars}},

	journal = {arXiv:2111.09668 [astro-ph]},
	author = {Sun, Leilei and Ioannidis, Panagiotis and Gu, Shenghong and Schmitt, Jürgen H. M. M. and Wang, Xiaobing and Kouwenhoven, M. B. N. and Perdelwitz, Volker and Dotti, Francesco Flammini and Czesla, Sabine},

	journal = {arXiv:2203.06109 [astro-ph]},
	author = {Bourrier, V. and Osorio, M. R. Zapatero and Allart, R. and Attia, O. and Cretignier, M. and Dumusque, X. and Lovis, C. and Adibekyan, V. and Borsa, F. and Figueira, P. and Hernández, J. I. González and Mehner, A. and Santos, N. C. and Schmidt, T. and Seidel, J. V. and Sozzetti, A. and Alibert, Y. and Casasayas-Barris, N. and Ehrenreich, D. and Curto, G. Lo and Martins, C. J. A. P. and Di Marcantonio, P. and Mégevand, D. and Nunes, N. J. and Palle, E. and Poretti, E. and Sousa, S. G.},

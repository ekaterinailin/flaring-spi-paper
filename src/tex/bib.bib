	doi = {10.1051/0004-6361/201731926},
	abstract = {{\textless}i{\textgreater}Context.{\textless}i/{\textgreater} CHROMIS, a new imaging spectrometer at the Swedish 1-m Solar Telescope (SST), can observe the chromosphere in the H and K lines of Ca II at high spatial and spectral resolution. Accurate modeling as well as an understanding of the formation of these lines are needed to interpret the SST/CHROMIS observations. Such modeling is computationally challenging because these lines are influenced by strong departures from local thermodynamic equilibrium, three-dimensional radiative transfer, and partially coherent resonance scattering of photons.{\textless}i{\textgreater}Aim.{\textless}i/{\textgreater} We aim to model the Ca II H and K lines in 3D model atmospheres to understand their formation and to investigate their diagnostic potential for probing the chromosphere.{\textless}i{\textgreater}Methods.{\textless}i/{\textgreater} We model the synthetic spectrum of Ca II using the radiative transfer code Multi3D in three different radiation-magnetohydrodynamic model atmospheres computed with the Bifrost code. We classify synthetic intensity profiles according to their shapes and study how their features are related to the physical properties in the model atmospheres. We investigate whether the synthetic data reproduce the observed spatially-averaged line shapes, center-to-limb variation and compare this data with SST/CHROMIS images.{\textless}i{\textgreater}Results.{\textless}i/{\textgreater} The spatially-averaged synthetic line profiles show too low central emission peaks, and too small separation between the peaks. The trends of the observed center-to-limb variation of the profiles properties are reproduced by the models. The Ca II H and K line profiles provide a temperature diagnostic of the temperature minimum and the temperature at the formation height of the emission peaks. The Doppler shift of the central depression is an excellent probe of the velocity in the upper chromosphere.},
	language = {en},
	urldate = {2022-08-01},
	journal = {Astronomy \& Astrophysics},
	author = {Bjørgen, Johan P. and Sukhorukov, Andrii V. and Leenaarts, Jorrit and Carlsson, Mats and Rodríguez, Jaime de la Cruz and Scharmer, Göran B. and Hansteen, Viggo H.},
	month = mar,
	year = {2018},
	note = {Publisher: EDP Sciences},
	pages = {A62},
}


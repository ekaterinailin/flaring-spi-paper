@article{song2022number,
	title = {The {Number} of {Possible} {CETIs} within {Our} {Galaxy} and the {Communication} {Probability} among {These} {CETIs}},
	volume = {928},
	issn = {0004-637X, 1538-4357},
	url = {http://arxiv.org/abs/2204.05479},
	doi = {10.3847/1538-4357/ac561d},
	abstract = {As the only known intelligent civilization, human beings are always curious about the existence of other communicating extraterrestrial intelligent civilizations (CETIs). Based on the latest astrophysical information, we carry out Monte Carlo simulations to estimate the number of possible CETIs within our Galaxy and the communication probability among them. Two poorly known parameters have a great impact on the results. One is the probability of life appearing on terrestrial planets and eventually evolving a into CETI (\$f\_c\$), and the other determines at what stage of their host star's evolution CETIs would be born (\$F\$). In order to ensure the completeness of the simulation, we consider a variety of combinations of \$f\_c\$ and \$F\$. Our results indicate that for optimistic situations (e.g. \$F=25{\textbackslash}\%\$ and \$f\_c=0.1{\textbackslash}\%\$), there could be \$42777\_\{-369\}{\textasciicircum}\{+267\}\$ CETIs and they need to survive for \$3\_\{-2\}{\textasciicircum}\{+17\}\$ yr (\$2000\_\{-1400\}{\textasciicircum}\{+2000\}\$ yr) to achieve one-way communication (two-way communication). In this case, human beings need to survive \$0.3\_\{-0.298\}{\textasciicircum}\{+0.6\}\$ Myr to receive one alien signal. For pessimistic situations (e.g. \$F=75{\textbackslash}\%\$ and \$f\_c=0.001{\textbackslash}\%\$), only \$111\_\{-17\}{\textasciicircum}\{+28\}\$ CETIs could be born and they need to survive for \$0.8\_\{-0.796\}{\textasciicircum}\{+1.2\}\$ Myr (\$0.9\_\{-0.88\}{\textasciicircum}\{+4.1\}\$ Myr) to achieve one-way communication (two-way communication). In this case, human beings need to survive \$50\_\{-49.6\}{\textasciicircum}\{+250\}\$ Myr to receive one signal from other CETIs. Our results may quantitatively explain why we have not detected any alien signals so far. The uncertainty of the results has been discussed in detail and would be alleviated with the further improvement of our astronomical observation ability in the future.},
	number = {2},
	urldate = {2022-06-24},
	journal = {The Astrophysical Journal},
	author = {Song, Wenjie and Gao, He},
	month = apr,
	year = {2022},
	note = {arXiv:2204.05479 [astro-ph, physics:physics]},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, Physics - Popular Physics},
	pages = {142},
}

@article{xu2022sunasastara,
	title = {Sun-as-a-star {Spectroscopic} {Observations} of the {Line}-of-sight {Velocity} of a {Solar} {Eruption} on 2021 {October} 28},
	volume = {931},
	issn = {0004-637X},
	url = {https://ui.adsabs.harvard.edu/abs/2022ApJ...931...76X},
	doi = {10.3847/1538-4357/ac69d5},
	abstract = {The propagation direction and true velocity of a solar coronal mass ejection, which are among the most decisive factors for its geo-effectiveness, are difficult to determine through single-perspective imaging observations. Here we show that Sun-as-a-star spectroscopic observations, together with imaging observations, could allow us to solve this problem. Using observations of the Extreme Ultraviolet Variability Experiment onboard the Solar Dynamics Observatory, we found clear blueshifted secondary emission components in extreme-ultraviolet spectral lines during a solar eruption on 2021 October 28. From simultaneous imaging observations, we found that the secondary components are caused by a mass ejection from the flare site. We estimated the line-of-sight (LOS) velocity of the ejecta from both the double Gaussian fitting method and the red-blue asymmetry analysis. The results of both methods agree well with each other, giving an average LOS velocity of the plasma of {\textasciitilde}423 km s-1. From the 304 Å image series taken by the Extreme ultraviolet Imager onboard the Solar Terrestrial Relation Observatory-A (STEREO-A) spacecraft, we estimated the plane-of-sky velocity from the STEREO-A viewpoint to be around 587 km s-1. The full velocity of the bulk motion of the ejecta was then computed by combining the imaging and spectroscopic observations, which turns out to be around 596 km s-1 with an angle of 42.°4 to the west of the Sun-Earth line and 16.°0 south to the ecliptic plane.},
	urldate = {2022-06-24},
	journal = {The Astrophysical Journal},
	author = {Xu, Yu and Tian, Hui and Hou, Zhenyong and Yang, Zihao and Gao, Yuhang and Bai, Xianyong},
	month = jun,
	year = {2022},
	note = {ADS Bibcode: 2022ApJ...931...76X},
	keywords = {1558, 1981, 310, Astrophysics - Solar and Stellar Astrophysics, Physics - Space Physics, Solar coronal mass ejections, Solar filament eruptions, Spectroscopy},
	pages = {76},
}

@techreport{markus2022optical,
	title = {Optical {Flare} {Search} on the {RS} {CVn}-type flare stars {AR} {Lacertae}},
	url = {https://ui.adsabs.harvard.edu/abs/2022arXiv220411059M},
	abstract = {We present the results of fast spectrophotometry of flares on the RS CVn-type star AR Lac with a time resolution of 34 s and a spectroscopic resolution R \${\textbackslash}sim \$ 1300. The observations were performed on July 21-22, 2021 with the 2.0 m Karl Zeiss telescope at the Terskol Observatory. During the flares, an additional emission appeared in the spectrum of AR Lac at wavelengths nearby Ca II Hamp;K (\${\textbackslash}lambda \$ = 3933, 3968 Å), nearby Si IV lines (\${\textbackslash}lambda \$ = 4089, 4116 Å). Variations in these lines range from 2 to 5{\textbackslash}\%. We have estimated the UBV magnitudes from spectrograms through a mathematical convolution of the spectra with the filter transmission curves. The flare amplitudes in the UBV band up to 0.8 magnitudes were discovered. A detailed colorimetric analysis has allowed important parameters of the flares on AR Lac to be estimated: the temperatures at maximum light and their sizes. The color-color \$(U-B)\$ - \$(B-V)\$ diagrams confirm that all the flares at maximum light radiate as a blackbody. The temperatures at maximum light were up to 12000 \${\textbackslash}pm \$ 300 K. Based on our colorimetric analysis, we have estimated the linear sizes of the flares at maximum light. The linear size of the flares at the maximum luminosity is approximately 2{\textbackslash}\% of the radius of the star.},

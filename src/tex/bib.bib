	keywords = {SUN: CORONA, SUN: FLARES, SUN: OSCILLATIONS, SUN: UV RADIATION, Sun: Corona, Sun: Flares, Sun: Oscillations, Sun: UV Radiation},
	pages = {880--894},
}


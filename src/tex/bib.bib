	journal = {The Astrophysical Journal},
	author = {Notsu, Yuta and Shibayama, Takuya and Maehara, Hiroyuki and Notsu, Shota and Nagao, Takashi and Honda, Satoshi and Ishii, Takako T. and Nogami, Daisaku and Shibata, Kazunari},

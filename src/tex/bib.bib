	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, planets and satellites: formation, stars: imaging, stars: individual: AU Microscopii, stars: magnetic fields, techniques: polarimetric, techniques: radial velocities},
	pages = {188--205},

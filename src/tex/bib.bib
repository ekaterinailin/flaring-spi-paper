	author = {Salter, D. M. and Kospal, Agnes and Getman, K. V. and Hogerheijde, M. R. and van Kempen, T. A. and Carpenter, J. M. and Blake, G. A. and Wilner, D.},
	month = oct,
	year = {2010},

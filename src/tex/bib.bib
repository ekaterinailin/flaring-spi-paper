	note = {ADS Bibcode: 2018ApJ...852...46K},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, stars: activity, stars: chromospheres, stars: individual: HD 173701, stars: oscillations: including pulsations, stars: rotation, stars: solar-type},

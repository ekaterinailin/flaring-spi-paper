	copyright = {© ESO, 2007},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2007/43/aa7397-07/aa7397-07.html},
	doi = {10.1051/0004-6361:20077397},
	abstract = {{\textless}i{\textgreater}Context.{\textless}i/{\textgreater} Close-in giant extrasolar planets (“Hot Jupiters”) are believed to be strong emitters in the decametric radio range. {\textless}i{\textgreater}Aims.{\textless}i/{\textgreater}We present the expected characteristics of the low-frequency magnetospheric radio emission of all currently known extrasolar planets, including the maximum emission frequency and the expected radio flux. We also discuss the escape of exoplanetary radio emission from the vicinity of its source, which imposes additional constraints on detectability. {\textless}i{\textgreater}Methods.{\textless}i/{\textgreater}We compare the different predictions obtained with all four existing analytical models for all currently known exoplanets. We also take care to use realistic values for all input parameters.{\textless}i{\textgreater}Results.{\textless}i/{\textgreater} The four different models for planetary radio emission lead to very different results. The largest fluxes are found for the {\textless}i{\textgreater}magnetic{\textless}i/{\textgreater} energy model, followed by the {\textless}i{\textgreater}CME{\textless}i/{\textgreater} model and the {\textless}i{\textgreater}kinetic{\textless}i/{\textgreater} energy model (for which our results are found to be much less optimistic than those of previous studies). The {\textless}i{\textgreater}unipolar interaction{\textless}i/{\textgreater} model does not predict any observable emission for the present exoplanet census. We also give estimates for the planetary magnetic dipole moment of all currently known extrasolar planets, which will be useful for other studies. {\textless}i{\textgreater}Conclusions.{\textless}i/{\textgreater}Our results show that observations of exoplanetary radio emission are feasible, but that the number of promising targets is not very high. The catalog of targets will be particularly useful for current and future radio observation campaigns (e.g. with the VLA, GMRT, UTR-2 and with LOFAR).},
	language = {en},
	number = {1},
	urldate = {2021-12-10},
	journal = {Astronomy and Astrophysics},
	author = {Grießmeier, J.-M. and Zarka, P. and Spreeuw, H.},
	month = nov,
	year = {2007},
	note = {Number: 1
Publisher: EDP Sciences},
	pages = {359--368},
}

@article{gastine2013what,
	title = {What controls the magnetic geometry of {M} dwarfs?},

	journal = {The Astrophysical Journal},
	author = {Airapetian, Vladimir S. and Glocer, Alex and Khazanov, George V. and Loyd, R. O. P. and France, Kevin and Sojka, Jan and Danchi, William C. and Liemohn, Michael W.},
	month = feb,

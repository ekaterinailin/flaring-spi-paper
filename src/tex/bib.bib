	author = {Kraus, Adam L. and Shkolnik, Evgenya L. and Allers, Katelyn N. and Liu, Michael C.},
	month = jun,
	year = {2014},
	note = {ADS Bibcode: 2014AJ....147..146K},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, binaries: spectroscopic, open clusters and associations: individual: Tucana-Horologium, stars: activity, stars: kinematics and dynamics, stars: low-mass, stars: pre-main sequence},

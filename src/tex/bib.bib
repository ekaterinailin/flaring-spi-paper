	author = {Zic, Andrew and Stewart, Adam and Lenc, Emil and Murphy, Tara and Lynch, Christene and Kaplan, David L. and Hotan, Aidan and Anderson, Craig and Bunton, John D. and Chippendale, Aaron and Mader, Stacy and Phillips, Chris},

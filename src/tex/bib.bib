	month = feb,
	year = {2008},
	note = {ADS Bibcode: 2008MNRAS.384...77M},
	keywords = {Astrophysics, brown dwarfs, stars: individual: V374 Peg, stars: low-mass, stars: magnetic fields, stars: rotation, techniques: polarimetric},
	pages = {77--86},

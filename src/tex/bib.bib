	keywords = {1558, 1603, 1881, 2109, 906, Astrophysics - Solar and Stellar Astrophysics, Late-type dwarf stars, Spectroscopy, Stellar coronal mass ejections, Stellar flares, Time domain astronomy},
	pages = {180},
}


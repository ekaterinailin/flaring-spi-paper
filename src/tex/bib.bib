	author = {Schmitt, J. H. M. M. and Favata, F.},
	month = sep,
	year = {1999},
	note = {ADS Bibcode: 1999Natur.401...44S},
	keywords = {Astrophysics},
	pages = {44--46},
}

@article{lakeland2022understanding,
	title = {Towards an understanding of {YSO} variability: a multiwavelength analysis of bursting, dipping, and symmetrically varying light curves of disc-bearing {YSOs}},

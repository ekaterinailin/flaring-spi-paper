@article{boyajian2013stellar,
	title = {Stellar {Diameters} and {Temperatures}. {III}. {Main}-sequence {A}, {F}, {G}, and {K} {Stars}: {Additional} {High}-precision {Measurements} and {Empirical} {Relations}},

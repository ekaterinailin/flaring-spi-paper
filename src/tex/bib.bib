@article{strugarek2019chasing,
	title = {Chasing {Star}-{Planet} {Magnetic} {Interactions}: {The} {Case} of {Kepler}-78},
	volume = {881},
	issn = {0004-637X},
	shorttitle = {Chasing {Star}-{Planet} {Magnetic} {Interactions}},

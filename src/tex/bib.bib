	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics},
	pages = {A75},
}

@article{santos2017starspot,
	title = {Starspot signature on the light curve - {Learning} about the latitudinal distribution of spots},
